<section id="remoteSection" signalr-connect="/JamsHub" signalr-subscribe="LeftChat" hx-swap="outerHTML">
    <h1>Shared Session for @Model.participantName</h1>

    <article id="remoteContent" signalr-subscribe="ChatJoined">            
        <form signalr-send="create" hx-target="#remoteContent">
            <input type="hidden" name="participantName" value="@Model.participantName" />                
            <button type="submit" id="create">Create</button>
        </form>
        <form signalr-send="connect" hx-target="#remoteContent" hx-include="[name='participantName']">
            <label for="jamId">Session Id:</label><input type="text" name="jamId" placeholder="Session to join" required /><br />
            <button type="submit" id="connect">Connect</button>
        </form>
    </article>
</section>