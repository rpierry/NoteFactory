@{
}
<form id="sendMessageForm" signalr-send="@nameof(ChatHub.SendMessage)" _="on htmx:signalr:afterSend reset() me">
    <input type="hidden" name="id" value="@Model.id" />
    <input type="hidden" name="participantId" value="@Model.participantId" />
    <input type="hidden" name="messageType" value="@MessageType.Chat" />
    <input type="text" name="message" required placeholder="Message..." autocomplete="off" />
    <button type="submit">Send</button>
</form>